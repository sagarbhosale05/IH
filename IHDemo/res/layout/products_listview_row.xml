<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.ih.demo"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:padding="10dp" >

    <FrameLayout
        android:id="@+id/avatarFrameFL"
        android:layout_width="50dip"
        android:layout_height="50dip" >

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/home_userimage_overlay" />

        <ProgressBar
            android:id="@+id/profile_picture_progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content" android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <com.ih.customwidgets.CustomTextView
        android:id="@+id/productTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/collectionCountTextView"
        android:layout_toRightOf="@+id/avatarFrameFL"
        android:singleLine="false"
        android:textColor="@android:color/black"
        custom:customFont="@string/font_roboto_regular" />

    <com.ih.customwidgets.CustomTextView
        android:id="@+id/collectionCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/arrow"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        custom:customFont="@string/font_roboto_regular" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/challenge_arrow" />

</RelativeLayout>